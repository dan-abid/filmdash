
<h1 style="text-align: center; padding-top: 25px;">Your Selection!</h1>

<div class="d-flex flex-column align-items-center my-4" data-controller="toggle">

    <div data-toggle-target="container1Element" class="row justify-content-center movie-info mb-3">
      <div class="movie-card col-4" data-action="click->toggle#button1" style="background-image:url('<%= @result[0]["poster"] %>')">
        <%# <div class="placeholder" alt="Placeholder 3"></div> %>
        <div class="d-none play-button" data-toggle-target="play1Element">
          <p><i class="fa-solid fa-play"></i></p>
        </div>
      </div>
      <div data-toggle-target="appear1Element" class="d-none infos d-flex flex-column align-items-start col-8">
        <div class="title">
          <p><strong><%= @result[0]["title"] %></strong></p>
        </div>
        <div class="rating">
          <p><i class="fa-solid fa-star text-warning"></i> <%= @result[0]["user_rating"] %>/10</p>
        </div>
        <div class="description">
          <p><%= @result[0]["plot_overview"] %></p>
        </div>
        <div>
        </div>
      </div>
    </div>

